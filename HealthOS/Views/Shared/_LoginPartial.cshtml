@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    if (User.IsInRole("Patient"))
    {
        <ul class="nav navbar-nav" style="display:inline">
            <li><a asp-area="" asp-controller="Home" asp-action="Index" class="fa fa-home"></a></li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Lekarze</a>
                <ul class="dropdown-menu" style="position: absolute">
                    <li><a asp-area="" asp-controller="Patient" asp-action="MyDoctors">Autoryzowani lekarze</a></li>
                    <li><a asp-area="" asp-controller="Patient" asp-action="DoctorVisits">Lista wizyt</a></li>
                </ul>
            </li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Statystyki</a>
                <ul class="dropdown-menu" style="position: absolute">
                    <li><a asp-area="" asp-controller="Patient" asp-action="BloodPressure">Ciśnienie krwi</a></li>
                    <li><a asp-area="" asp-controller="Patient" asp-action="Glucose">Stężenie glukozy</a></li>
                    <li><a asp-area="" asp-controller="Patient" asp-action="Height">Wzrost</a></li>
                    <li><a asp-area="" asp-controller="Patient" asp-action="Weight">Masa ciała</a></li>
                </ul>
            </li>
            <li><a asp-area="" asp-controller="Patient" asp-action="DrugList">Leki</a></li>
            <li><a asp-area="" asp-controller="Patient" asp-action="Diseases">Choroby</a></li>
            <li><a asp-area="" asp-controller="Patient" asp-action="ChatList">Wiadomości</a></li>
            <li><a asp-area="" asp-controller="Patient" asp-action="PersonalData">Moje dane</a></li>
        </ul>
    }
    else
    {
        <ul class="nav navbar-nav" style="display:inline">
            <li><a asp-area="" asp-controller="Doctor" asp-action="Index" class="fa fa-home"></a></li>
            <li><a asp-area="" asp-controller="Doctor" asp-action="MyPatients">Moi Pacjenci</a></li>
            <li><a asp-area="" asp-controller="Doctor" asp-action="ChatList">Wiadomości</a></li>
            <li><a asp-area="" asp-controller="Doctor" asp-action="PersonalData">Moje dane</a></li>
        </ul>
    }
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link"><b>Wyloguj</b></button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav" align="center" style="font-size: xx-large; color: dimgrey">
        <li style=""><b>Logowanie</b></li>
    </ul>
}
