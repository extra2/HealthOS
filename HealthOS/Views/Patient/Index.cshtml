@model HealthOS.ViewModels.Patient.PatientViewModel
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="box">
    @await Html.PartialAsync("_UserHeader")
    <div class="title">Witaj @Model.AppUser.Name @Model.AppUser.Surname!</div>
</div>

<div class="break"></div>

<div class="row">
    <div class="singlecolumn">
        <div class="panel panel-primary" style="border-radius: 10px">
            <div class="panel-heading" align="center" style="background: #103A75; border-color: #808080; border-radius: 10px; font-size: 20px"><b>Statystyki</b></div>
            <div class="panel-body">
                <div class="row">
                    <div class="col col-3">
                        <button type="button" onclick="location.href = '@Url.Action("BloodPressure", "Patient")'" class="btn btn-lg btn-primary" style="width: 98%; margin-left: 1%; margin-right: 1%; background: #90BAF4; border-width: 0px">
                            <b>Ciśnienie krwi</b>
                        </button>
                    </div>
                    <div class="col col-2">
                        <button type="button" onclick="location.href = '@Url.Action("Glucose", "Patient")'" class="btn btn-lg btn-primary" style="width: 98%; margin-left: 1%; margin-right: 1%; background: #90BAF4; border-width: 0px">
                            <b>Stężenie glukozy</b>
                        </button>
                    </div>
                    <div class="col col-2">
                        <button type="button" onclick="location.href = '@Url.Action("Height", "Patient")'" class="btn btn-lg btn-primary" style="width: 98%; margin-left: 1%; margin-right: 1%; background: #90BAF4; border-width: 0px">
                            <b>Wzrost</b>
                        </button>
                    </div>
                    <div class="col col-2">
                        <button type="button" onclick="location.href = '@Url.Action("Weight", "Patient")'" class="btn btn-lg btn-primary" style="width: 98%; margin-left: 1%; margin-right: 1%; background: #90BAF4; border-width: 0px">
                            <b>Masa ciała </b>
                        </button>
                    </div>
                    <div class="col col-3">
                        <button type="button" onclick="location.href = '@Url.Action("CustomStatistics", "Patient")'" class="btn btn-lg btn-primary" style="width: 98%; margin-left: 1%; margin-right: 1%; background: #90BAF4; border-width: 0px">
                            <b>Statystyki Własne </b>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="column">
        <div class="panel panel-primary" style="border-radius: 10px">
            <div class="panel-heading" align="center" style="background: #103A75; border-radius: 10px"><b>Moi lekarze</b></div>
            <div class="row panel-body" style="height: 100%">
                <div class="col col-6">
                    <button type="button" onclick="location.href = '@Url.Action("MyDoctors", "Patient")'" class="btn btn-lg btn-success" style="width: 98%; margin-left: 1%; margin-right: 1%; background: #90BAF4; border-width: 0px">
                        <b>Lista autoryzowanych lekarzy</b>
                    </button>
                </div>
                <div class="col col-6">
                    <button type="button" onclick="location.href = '@Url.Action("DoctorVisits", "Patient")'" class="btn btn-lg btn-success" style="width: 98%; margin-left: 1%; margin-right: 1%; background: #90BAF4; border-width: 0px">
                        <b>Lista wizyt u lekarza</b>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="column">
        <div class="panel panel-primary" style="border-radius: 10px">
            <div class="panel-heading" align="center" style="background: #103A75; border-radius: 10px"><b>Leki oraz choroby</b></div>
            <div class="row panel-body">
                <div class="col col-6">
                    <button type="button" onclick="location.href = '@Url.Action("DrugList", "Patient")'" class="btn btn-lg btn-success" style="width: 98%; margin-left: 1%; margin-right: 1%; background: #90BAF4; border-width: 0px">
                        <b>Lista zażywanych leków</b>
                    </button>
                </div>
                <div class="col col-6">
                    <button type="button" onclick="location.href = '@Url.Action("Diseases", "Patient")'" class="btn btn-lg btn-success" style="width: 98%; margin-left: 1%; margin-right: 1%; background: #90BAF4; border-width: 0px">
                        <b>Choroby i alergie</b>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="column">
        <div class="panel panel-primary" style="border-radius: 10px">
            <div class="panel-heading" align="center" style="background: #103A75; border-radius: 10px"><b>Wiadomości</b></div>
            <div class="panel-body" style="height: 100%">
                <div class="col col-12">
                    <button type="button" onclick="location.href = '@Url.Action("ChatList", "Patient")'" class="btn btn-lg btn-warning" style="width: 98%; margin-left: 1%; margin-right: 1%; background: #90BAF4; border-width: 0px">
                        <b>Lista wiadomości</b>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="column">
        <div class="panel panel-primary" style="border-radius: 10px">
            <div class="panel-heading" align="center" style="background: #103A75; border-radius: 10px"><b>Dane osobowe</b></div>
            <div class="panel-body">
                <div class="col col-12">
                    <button type="button" onclick="location.href = '@Url.Action("PersonalData", "Patient")'" class="btn btn-lg btn-warning" style="width: 98%; margin-left: 1%; margin-right: 1%; background: #90BAF4; border-width: 0px">
                        <b>Zarządaj danymi osobowymi</b>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>